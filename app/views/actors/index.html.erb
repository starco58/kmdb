<div class="page-header">
  <h1>Actors</h1>
</div>

<% @list_of_actors.each do |actor| %>
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= actor.name %></h3>
        </div>
        <div class="panel-body">
          <div class="col-sm-2">
              <img src="<%= actor.image_url %>" class="img-responsive">
          </div>
          <div class="col-sm-10">
            <dl>
              <dt>Date of Birth</dt>
              <dd><%= actor.dob %></dd>

              <dt>Bio</dt>
              <dd><%= actor.bio %></dd>

              <dt>Actions</dt>
              <dd>
                <a href="/actors/<%= actor.id %>" class="btn btn-primary">Show</a>
              </dd>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
